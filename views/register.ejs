<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width initial-scale=0.5, maximum-scale=0.5, minimum-scale=0.5">
<meta http-equiv="X-UA-Compatible" content="ie=edge">
<title>慕课网</title>
<link rel="stylesheet" href="css/login.css"/>
<link rel="stylesheet" href="css/register.css"/>
<script src="https://cdn.bootcss.com/jquery/1.8.3/jquery.js"></script>
<!-- <script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script> -->
</head>
<body>
    <!-- ----------------------------弹出提示信息------------------------------ -->
    <% if(errmsg){ %>
        <div class="info"></div>
    <% } %>
    <div class="info"></div>

    <!-- -------------------------------header-------------------------------- -->
    <!-- 顶部关闭按钮 -->
    <div class="loginHeader">
        <span class="loginClose"></span>
    </div>
    <!-- title -->
    <h1 class="loginTitle">注册</h1>
    <!-- --------------------------------输入框------------------------------ -->
    <form action="regbyphone" method="post" name="regbyphone" class="loginForm regByPhoneForm">
        <div class="username loginInput">
            <input type="number" name="usernamePhone" class="inUsername" autocomplete="off" placeholder="手机号"/>
            <span class="loginDelete loginIconBtn"></span>
        </div>
        <div class="verifyCode loginInput">
                <input type="number" name="verifyCode" class="inVerifyCode" autocomplete="off" placeholder="验证码"/>
                <a href="javascript:;" class="getVerifyCode loginIconBtn">获取短信验证码</a>
            </div>
        <div class="password loginInput">
            <input type="password" name="passwordPhone" class="inPassword" placeholder="密码"/>
            <span class="loginShowPsw loginIconBtn"></span>
        </div>
        <input type="submit" value="注册" class="submit regByPhoneSub" data-role="none"/>
    </form>
    <!-- 邮箱注册 -->
    <div class="loginAlink">
        <a href="javascript:;" class="regByEmailLink loginAlinkBtn">邮箱注册</a>
    </div>
    <!-- ----------------------------底部文字链接---------------------------- -->
    <div class="loginAlink loginAlinkBottom">
        <!-- 已有账号登录 -->        
        <a href="login.html" class="loginToLogin loginAlinkBtn">已有慕课网账号？去登录</a>
    </div>

    <!-- ----------------------------邮箱注册界面---------------------------- -->
    <div class="regByEmail">
        <!-- -------------------------------header-------------------------------- -->
    <!-- 顶部关闭按钮 -->
    <div class="loginHeader">
            <span class="loginClose"></span>
        </div>
        <!-- title -->
        <h1 class="loginTitle">邮箱注册</h1>
        <!-- --------------------------------输入框------------------------------ -->
        <form action="regbyemail" method="post" name="regbyemail" class="loginForm regByEmailForm">
            <div class="username loginInput">
                <input type="text" name="usernameEmail" class="inUsername" autocomplete="off" placeholder="输入注册邮箱"/>
                <span class="loginDelete loginIconBtn"></span>
            </div>
            <div class="password loginInput">
                <input type="password" name="passwordEmail" class="inPassword" placeholder="请输入密码"/>
                <span class="loginShowPsw loginIconBtn"></span>
            </div>
            <input type="submit" value="注册" class="submit regByEmailSub" data-role="none"/>
        </form>
        <!-- 邮箱注册 -->
        <div class="loginAlink">
            <a href="javascript:;" class="regByPhoneLink loginAlinkBtn">手机注册</a>
        </div>
    </div>


    <script src="js/login.js"></script>
    <script src="js/register.js"></script>
    <script>
        $('.info').animate({'opacity':1},'fast').html('该账号已注册').addClass('infoSlide');
        setTimeout(function(){
            $('.info').animate({'opacity':0},'fast',function(){
                $('.info').removeClass('infoSlide');
            });
        },2000);
    </script>
</body>
</html>